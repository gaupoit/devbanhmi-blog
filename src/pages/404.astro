---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found">
  <div class="py-16 text-center">
    <h1 class="text-6xl font-bold text-gray-300 dark:text-gray-700">404</h1>
    <p class="mt-4 text-xl text-gray-600 dark:text-gray-400">Page not found</p>
    <p class="mt-2 text-gray-500">The page you're looking for doesn't exist.</p>
    <a
      href="/"
      class="mt-6 inline-block rounded-lg bg-gray-900 px-4 py-2 text-sm font-medium text-white hover:bg-gray-700 dark:bg-white dark:text-gray-900 dark:hover:bg-gray-200"
    >
      Go home
    </a>
  </div>
</BaseLayout>
