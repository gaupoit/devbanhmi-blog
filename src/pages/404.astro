---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found">
  <div class="max-w-xl mx-auto">
    <div class="pixel-border p-12 text-center" style="background: var(--color-cream);">
      <!-- Pixel 404 text -->
      <div class="font-pixel text-4xl sm:text-6xl" style="color: var(--color-bread);">
        404
      </div>

      <h1 class="mt-6 font-pixel text-sm" style="color: var(--color-brown-dark);">
        Page Not Found
      </h1>

      <p class="mt-4" style="color: var(--color-brown);">
        Oops! This page got lost in the pixels.
      </p>

      <!-- Sad banh mi illustration -->
      <div class="mt-8 flex justify-center">
        <img
          src="/images/banhmi-logo.svg"
          alt="Lost banh mi"
          class="w-24 h-24 pixel-render opacity-50"
        />
      </div>

      <a href="/" class="inline-block mt-8 pixel-btn px-6 py-3">
        &lt;&lt; Go Home
      </a>
    </div>
  </div>
</BaseLayout>
